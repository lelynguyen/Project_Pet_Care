@model PetCare.Models.Post

@{
    ViewBag.Title = "Chi tiết bài đăng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Chi tiết bài đăng</h2>

    <div class="row">
        <div class="col-md-8">
            <!-- Tiêu đề -->
            <div class="mb-3">
                <label class="form-label">Tiêu đề</label>
                <p class="form-control-plaintext">@Model.Title</p>
            </div>

            <!-- Mô tả -->
            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                <p class="form-control-plaintext">@Model.Description</p>
            </div>

            <!-- Nội dung -->
            <div class="mb-3">
                <label class="form-label">Nội dung</label>
                <p class="form-control-plaintext">@Model.Content</p>
            </div>

            <!-- Hình ảnh -->
            <div class="mb-3">
                <label class="form-label">Hình ảnh</label><br />
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" alt="Hình ảnh" width="400" />
                }
                else
                {
                    <p>Chưa có hình ảnh</p>
                }
            </div>

            <!-- Thời gian đăng -->
            <div class="mb-3">
                <label class="form-label">Thời gian đăng</label>
                <p class="form-control-plaintext">@Model.PostedTime.ToString("dd/MM/yyyy HH:mm")</p>
            </div>

            <!-- Thời gian cập nhật -->
            <div class="mb-3">
                <label class="form-label">Thời gian cập nhật</label>
                <p class="form-control-plaintext">@Model.UpdatedTime.ToString("dd/MM/yyyy HH:mm")</p>
            </div>

            <!-- Trạng thái -->
            <div class="mb-3">
                <label class="form-label">Trạng thái</label>
                @if (Model.Status)
                {
                    <span class="badge bg-success">Hiển thị</span>
                }
                else
                {
                    <span class="badge bg-secondary">Ẩn</span>
                }
            </div>

            <a asp-action="Edit" asp-route-id="@Model.PostId" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>
