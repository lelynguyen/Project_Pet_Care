@model PetCare.Models.Customer

@{
    ViewBag.Title = "Chỉnh sửa khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Chỉnh sửa thông tin khách hàng</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <form asp-action="Edit" asp-route-id="@Model.CustomerId" method="post">
        <input type="hidden" asp-for="CustomerId" />
        <input type="hidden" asp-for="Account.AccountId" />

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Account.FullName" class="form-label">Họ và tên</label>
                    <input asp-for="Account.FullName" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Account.Email" class="form-label">Email</label>
                    <input asp-for="Account.Email" class="form-control" type="email" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="Account.Password" class="form-label">Mật khẩu</label>
                    <div class="input-group">
                        <input asp-for="Account.Password" class="form-control" type="password" id="password" placeholder="Để trống nếu không đổi mật khẩu" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('password', this)">
                            <i class="bi bi-eye"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Account.PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="Account.PhoneNumber" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Account.Address" class="form-label">Địa chỉ</label>
                    <input asp-for="Account.Address" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function togglePassword(fieldId, btn) {
            var field = document.getElementById(fieldId);
            if (field.type === "password") {
                field.type = "text";
                btn.innerHTML = '<i class="bi bi-eye-slash"></i>';
            } else {
                field.type = "password";
                btn.innerHTML = '<i class="bi bi-eye"></i>';
            }
        }
    </script>
}
