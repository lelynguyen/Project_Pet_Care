@model PetCare.Models.Customer

@{
    ViewBag.Title = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Chi tiết khách hàng</h2>

    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.CustomerId</dd>

        <dt class="col-sm-2">Họ và tên</dt>
        <dd class="col-sm-10">@Model.Account.FullName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Account.Email</dd>

        <dt class="col-sm-2">Số điện thoại</dt>
        <dd class="col-sm-10">@Model.Account.PhoneNumber</dd>

        <dt class="col-sm-2">Địa chỉ</dt>
        <dd class="col-sm-10">@Model.Account.Address</dd>
    </dl>

    <h3>Danh sách thú cưng</h3>
    <div class="mb-3">
        <a href="@Url.Action("Create", "Pets", new { customerId = Model.CustomerId })" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm thú cưng
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên thú cưng</th>
                <th>Loại</th>
                <th>Đặc điểm</th>
                <th>Tuổi</th>
                <th>Cân nặng</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pet in Model.Pets)
            {
                <tr>
                    <td>@pet.PetId</td>
                    <td>@pet.Name</td>
                    <td>@pet.TypePet.TypeName</td>
                    <td>@pet.Characteristics</td>
                    <td>@pet.Age</td>
                    <td>@pet.Weight</td>
                    <td>
                        <a href="@Url.Action("Details", "Pets", new { id = pet.PetId })" class="btn btn-info btn-sm">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a href="@Url.Action("Edit", "Pets", new { id = pet.PetId })" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="@Url.Action("Delete", "Pets", new { id = pet.PetId })" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
