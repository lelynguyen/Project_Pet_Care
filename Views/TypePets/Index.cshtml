@model IEnumerable<PetCare.Models.TypePet>

@{
    ViewBag.Title = "Danh sách loại thú cưng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Danh sách loại thú cưng</h2>

    <!-- Phần hiển thị TempData Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="tempDataMessage">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" id="tempDataMessage">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-3">
        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm loại thú cưng
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên loại thú cưng</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var typePet in Model)
            {
                <tr>
                    <td>@typePet.TypePetId</td>
                    <td>@typePet.TypeName</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = typePet.TypePetId })" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { id = typePet.TypePetId })" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
