@model PetCare.Models.TypePet

@{
    ViewBag.Title = "Chỉnh sửa loại thú cưng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Chỉnh sửa loại thú cưng</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="TypePetId" />
        <div class="mb-3">
            <label asp-for="TypeName" class="form-label">Tên loại thú cưng</label>
            <input asp-for="TypeName" class="form-control" required />
            <span asp-validation-for="TypeName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Lưu thay đổi
        </button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
