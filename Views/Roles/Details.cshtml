@model PetCare.Models.Role

@{
    ViewBag.Title = "Chi tiết vai trò";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Chi tiết vai trò</h2>

    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.RoleId</dd>

        <dt class="col-sm-2">Tên vai trò</dt>
        <dd class="col-sm-10">@Model.RoleName</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.RoleId" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Chỉnh sửa
    </a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>
