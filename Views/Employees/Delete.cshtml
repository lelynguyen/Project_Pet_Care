@model PetCare.Models.Employee

@{
    ViewBag.Title = "Xoá nhân viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2>Xoá nhân viên</h2>
    <h4>Bạn có chắc chắn muốn xoá nhân viên này?</h4>

    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.EmployeeId</dd>

        <dt class="col-sm-2">Họ và tên</dt>
        <dd class="col-sm-10">@Model.Account.FullName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Account.Email</dd>

        <dt class="col-sm-2">Vai trò</dt>
        <dd class="col-sm-10">@Model.Role.RoleName</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EmployeeId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Xoá
        </button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>

</div>
