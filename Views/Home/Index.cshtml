@{
    ViewBag.Title = "Home";
    Layout = null; // Không sử dụng Layout để trang login - đăng ký toàn màn hình
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login and Register - Pet Care</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f0f8ff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            margin-top: 50px;
            border-radius: 15px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            padding: 2rem;
        }

        .nav-tabs .nav-link {
            color: #495057;
        }

            .nav-tabs .nav-link.active {
                color: #495057;
                background-color: #ffffff;
                border-color: #dee2e6 #dee2e6 #ffffff;
            }

        .nav-tabs {
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #ff7f50;
            border-color: #ff7f50;
        }

            .btn-primary:hover {
                background-color: #ff6347;
                border-color: #ff6347;
            }

        .petcare-logo {
            display: block;
            margin: 20px auto; /* Căn giữa theo chiều ngang và thêm khoảng cách phía trên */
            width: 250px; /* Tăng kích thước logo */
            height: auto; /* Đảm bảo giữ nguyên tỉ lệ */
        }

        .form-control {
            border-radius: 8px;
            padding: 0.75rem 1rem;
        }

        h2 {
            text-align: center;
            margin-top: -40px;
            margin-bottom: 20px;
            color: #333;
        }

        .petcare-background {
            background-image: url('https://example.com/pet-background.jpg'); /* Thay đường dẫn hình ảnh phù hợp */
            background-size: cover;
            background-position: center;
            padding: 50px 0;
        }

        .card-container {
            max-width: 600px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="petcare-background">
        <div class="container card-container">
            <div class="card shadow-sm">
                <img src="~/img/logo.png" alt="Pet Care Logo" class="petcare-logo"> <!-- Thay đường dẫn hình ảnh logo -->
                <h2>Welcome to Pet Care</h2>
                <div class="card-body">
                    <ul class="nav nav-tabs" id="loginRegisterTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="login-tab" data-bs-toggle="tab" href="#login" role="tab">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="register-tab" data-bs-toggle="tab" href="#register" role="tab">Register</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="loginRegisterTabContent">
                        <!-- Tab Login -->
                        <div class="tab-pane fade show active" id="login" role="tabpanel">
                            @Html.Partial("Login")
                        </div>
                        <!-- Tab Register -->
                        <div class="tab-pane fade" id="register" role="tabpanel">
                            @Html.Partial("Register")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS và các phụ thuộc -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script để duy trì tab khi có lỗi validation -->
    <script>
        $(document).ready(function () {
            // Kiểm tra nếu có lỗi trong form đăng nhập
            if ('@ViewBag.LoginError' === 'True') {
                var loginTab = new bootstrap.Tab(document.querySelector('#login-tab'));
                loginTab.show();
            }

            // Kiểm tra nếu có lỗi trong form đăng ký
            if ('@ViewBag.RegisterError' === 'True') {
                var registerTab = new bootstrap.Tab(document.querySelector('#register-tab'));
                registerTab.show();
            }
        });
    </script>
</body>
</html>
